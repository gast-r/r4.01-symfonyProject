{% extends 'base.html.twig' %}

{% block title %}Boutique
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h1>
				<i class="fas fa-store"></i>
				Store : {{categories|length}} Categories
			</h1>
		</div>
        <div class="card-body row">
        {% for category in categories %}
		
			<div class="col-md-3">

				<div class="card clickable" onclick="location = 'boutique/rayon/{{category.id}}'">
					<img src="{{asset(category.visuel)}}" class="card-img-top" alt="Fruits">
					<div class="card-body">
						<h4 class="card-title">{{category.libelle}}</h4>
						<p class="card-text">
							<i>{{category.texte}}</i>
						</p>
					</div>
				</div>
			</div>
        {% endfor %}
        </div>
	</div>
{% endblock %}
