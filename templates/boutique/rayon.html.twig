{% extends 'base.html.twig' %}

{% block title %}
	{% trans with {
			'categoryLabel': category.libelle
		} %} boutique.rayon.title {% endtrans %}
{% endblock %}

{% block body %}
	<div class="card col-md-12">
		<div class="card-header">
			<h1><i class="fas fa-store"></i> {% trans with {
					'categoryLabel': category.libelle,
					'nbArticle': products | length
				} %} boutique.rayon.nbArticleMessage {% endtrans %} </h1>
		</div>
		<div class="card-body row">
        {% for product in products %}
			<div class="col-md-4">
				<div class="card clickable" onclick="location = '{{ path('app_panier_ajouter', {
																		'idProduct':product.id,
																		'quantity':1}) }}'">
					<img src='{{asset(product.visuel)}}' class="card-img-produit" alt="Nutella">
					<div class="card-body">
						<h4 class="card-title">{{product.libelle}}</h4>
						<p class="card-text">
							<i>{{product.texte}}</i>
						</p>
						<h2>
							<span class="badge badge-primary">
								<i class="fas fa-cart-plus"></i>&nbsp;&nbsp;
									                                    {{product.prix}}
							</span>
						</h2>
					</div>
				</div>
			</div>
        {% endfor %}
		</div>
	</div>
{% endblock %}
