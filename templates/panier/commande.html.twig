{% extends 'base.html.twig' %}

{% block title %} Last order {% endblock %}

{% block body %}
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-header">
                <h3><i class="fas fa-user-check"></i> {% trans  %} panier.commande.myOrder {% endtrans %}</h3>
            </div>
            <div class="card-body">
                <table class="table table-striped table-sm table-hover">
                    <thead>
                    <tr>
                        <th>{% trans %} panier.commande.rankFirstName {% endtrans %}</th>
                        <th>{% trans %} panier.commande.rankLastName {% endtrans %}s</th>
                        <th>{% trans %} panier.commande.numberOrder {% endtrans %}</th>
                        <th>{% trans %} panier.commande.orderDate {% endtrans %}</th>
                        <th>{% trans %} panier.commande.status {% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="text-danger" >
                        <td>{{ order.usager.prenom }}</td>
                        <td>{{ order.usager.nom }}</td>
                        <td>{{ order.id }}</td>
                        <td>{{ order.dateCreation | date('d-m-Y')}}</td>
                        <td>
                            <i class="fas fa-hourglass-half" data-toggle="tooltip" title="validation en Attente" data-placement="right"></i>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
